{
	"compilerOptions": {
		"target": "ES2023",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"lib": ["ES2023", "DOM", "DOM.Iterable"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
